@page
@model HelpdeskSystem.Pages.Tickets.EditModel
@{
    ViewData["Title"] = "Edit Ticket";
}

<!-- PAGE HEADER -->
<div class="mb-4">
    <h2 class="fw-bold mb-1">✏️ Edit Ticket</h2>
    <small class="text-muted">
        Update ticket details before submitting changes
    </small>
</div>

<!-- EDIT FORM CARD -->
<div class="card shadow-sm">
    <div class="card-body">

        <form method="post">
            <input type="hidden" asp-for="Ticket.Id" />

            <!-- TITLE -->
            <div class="mb-3">
                <label asp-for="Ticket.Title" class="form-label fw-semibold"></label>
                <input asp-for="Ticket.Title" class="form-control" />
                <span asp-validation-for="Ticket.Title" class="text-danger"></span>
            </div>

            <!-- DESCRIPTION -->
            <div class="mb-3">
                <label asp-for="Ticket.Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Ticket.Description"
                          class="form-control"
                          rows="4"></textarea>
            </div>

            <!-- STATUS -->
            <div class="mb-4">
                <label class="form-label fw-semibold">Status</label>

                @if (User.IsInRole("Admin"))
                {
                    <!-- Admin can change status -->
                    <select asp-for="Ticket.Status" class="form-select">
                        <option value="Open">Open</option>
                        <option value="In Progress">In Progress</option>
                        <option value="Resolved">Resolved</option>
                    </select>
                }
                else
                {
                    <!-- User sees read-only status -->
                    <div>
                        <span class="badge
                            @(Model.Ticket.Status == "Open" ? "bg-warning text-dark" :
                              Model.Ticket.Status == "Resolved" ? "bg-success" :
                              "bg-secondary")">
                            @Model.Ticket.Status
                        </span>
                    </div>
                }
            </div>

            <!-- ACTION BUTTONS -->
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    💾 Update Ticket
                </button>

                <a asp-page="Index" class="btn btn-outline-secondary">
                    Cancel
                </a>
            </div>
        </form>

    </div>
</div>