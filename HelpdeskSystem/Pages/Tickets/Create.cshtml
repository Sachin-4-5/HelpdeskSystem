@page
@model HelpdeskSystem.Pages.Tickets.CreateModel
@{
    ViewData["Title"] = "Create Ticket";
}

<!-- PAGE HEADER -->
<div class="mb-4">
    <h2 class="fw-bold mb-1">➕ Create Ticket</h2>
    <small class="text-muted">
        Submit a new support request and track its progress
    </small>
</div>

<!-- CREATE FORM -->
<div class="card shadow-sm">
    <div class="card-body">

        <form method="post">
            <!-- TITLE -->
            <div class="mb-3">
                <label asp-for="Ticket.Title" class="form-label fw-semibold">
                    Title <span class="text-danger">*</span>
                </label>
                <input asp-for="Ticket.Title"
                       class="form-control"
                       placeholder="Enter a short issue title" />
                <span asp-validation-for="Ticket.Title" class="text-danger small"></span>
            </div>

            <!-- DESCRIPTION -->
            <div class="mb-4">
                <label asp-for="Ticket.Description" class="form-label fw-semibold">
                    Description
                </label>
                <textarea asp-for="Ticket.Description"
                          class="form-control"
                          rows="5"
                          placeholder="Describe your issue in detail"></textarea>
            </div>

            <!-- ACTION BUTTONS -->
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    💾 Submit Ticket
                </button>

                <a asp-page="Index" class="btn btn-outline-secondary">
                    Cancel
                </a>
            </div>
        </form>

    </div>
</div>