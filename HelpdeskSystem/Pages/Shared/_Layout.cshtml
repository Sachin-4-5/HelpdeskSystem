@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - HelpdeskSystem</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>

    <!-- NAVBAR (UNCHANGED) -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold d-flex align-items-center" asp-page="/Index">HelpdeskSystem</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Dashboard/Index">Dashboard</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Tickets</a>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item" asp-page="/Tickets/Index">View Tickets</a></li>
                            <li><a class="dropdown-item" asp-page="/Tickets/Create">Create Ticket</a></li>
                        </ul>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Admin</a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" asp-page="/Admin/Index">Admin Dashboard</a></li>
                            </ul>
                        </li>
                    }
                }

                <ul class="navbar-nav ms-auto align-items-center gap-2">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" role="button" data-bs-toggle="dropdown">

                                <!-- USER ICON -->
                                <span class="bg-primary text-white rounded-circle d-inline-flex
                                      align-items-center justify-content-center"
                                      style="width:32px;height:32px;">
                                    <i class="bi bi-person-fill"></i>
                                </span>

                                <!-- USER NAME -->
                                <span class="text-light fw-semibold">
                                    @User.FindFirst("FullName")?.Value
                                </span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark shadow">

                                <li><a class="dropdown-item" asp-page="/Dashboard/Index">📊 Dashboard</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form method="post" asp-page="/Account/Logout" class="px-3">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link dropdown-item text-danger p-0">🚪 Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link nav-hover" href="#" data-bs-toggle="modal" data-bs-target="#loginModal">
                                Login
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-outline-primary btn-sm" href="#" data-bs-toggle="modal" data-bs-target="#registerModal">
                                Register
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- PAGE CONTENT -->
    <div class="container mt-4">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </div>

    <!-- FOOTER (UNCHANGED – 100%) -->
    <footer class="bg-dark text-light mt-5 pt-4 pb-3 footer">
        <div class="container">
            <div class="row">

                <!-- BRAND -->
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold">HelpdeskSystem</h5>
                    <p class="text-muted small">
                        A modern ticketing and support management system designed for efficient issue tracking and resolution.
                    </p>

                    @if (!SignInManager.IsSignedIn(User))
                    {
                        <p class="small text-warning mt-2">
                            🔒 Please login to access dashboard and ticket features.
                        </p>
                    }
                </div>

                <!-- QUICK LINKS -->
                <div class="col-md-2 mb-3">
                    <h6 class="text-uppercase fw-semibold">Quick Links</h6>
                    <ul class="list-unstyled small">

                        <li>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a asp-page="/Index" class="text-decoration-none text-muted">Dashboard</a>
                            }
                            else
                            {
                                <span class="text-muted disabled-link">Dashboard</span>
                            }
                        </li>

                        <li>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a asp-page="/Tickets/Index" class="text-decoration-none text-muted">Tickets</a>
                            }
                            else
                            {
                                <span class="text-muted disabled-link">Tickets</span>
                            }
                        </li>

                        <li>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a asp-page="/Tickets/Create" class="text-decoration-none text-muted">Create Ticket</a>
                            }
                            else
                            {
                                <span class="text-muted disabled-link">Create Ticket</span>
                            }
                        </li>

                    </ul>
                </div>

                <!-- ADMIN -->
                <div class="col-md-2 mb-3">
                    <h6 class="text-uppercase fw-semibold">Admin</h6>
                    <ul class="list-unstyled small">
                        <li>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-page="/Admin/Index" class="text-decoration-none text-muted">Admin Dashboard</a>
                            }
                            else
                            {
                                <span class="text-muted disabled-link">Admin Dashboard</span>
                            }
                        </li>
                    </ul>
                </div>

                <!-- SUPPORT -->
                <div class="col-md-4 mb-3">
                    <h6 class="text-uppercase fw-semibold">Support</h6>
                    <p class="small text-muted mb-1">📧 support@helpdesksystem.com</p>
                    <p class="small text-muted mb-0">⏰ Mon – Fri, 9:00 AM – 6:00 PM</p>
                </div>
            </div>

            <hr class="border-secondary my-3" />

            <div class="text-center small text-muted">
                © @DateTime.Now.Year HelpdeskSystem. All rights reserved.
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    

    <!-- LOGIN MODAL -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-md">
            <div class="modal-content border-0 shadow-lg rounded-4">

                <!-- HEADER -->
                <div class="modal-header border-0 pb-0">
                    <h4 class="modal-title fw-bold">Welcome back 👋</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- BODY -->
                <div class="modal-body pt-2 px-4 pb-4">
                    <p class="text-muted small mb-4">
                        Sign in to continue to <strong>HelpdeskSystem</strong>
                    </p>

                    <form method="post" asp-page="/Account/Login">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label small fw-semibold">Email address</label>
                            <input name="Email"
                                   class="form-control form-control-lg"
                                   placeholder="you@example.com"
                                   required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-semibold">Password</label>
                            <input name="Password"
                                   type="password"
                                   class="form-control form-control-lg"
                                   placeholder="••••••••"
                                   required />
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input name="RememberMe" class="form-check-input" type="checkbox" />
                                <label class="form-check-label small">Remember me</label>
                            </div>
                            <a href="#" class="small text-decoration-none">Forgot password?</a>
                        </div>

                        <button class="btn btn-primary btn-lg w-100 mb-3">
                            Login
                        </button>
                    </form>

                    <!-- SOCIAL LOGIN (UI ONLY – FUTURE MFA READY) -->
                    <div class="text-center">
                        <small class="text-muted">or sign in with</small>
                        <div class="d-flex justify-content-center gap-3 mt-2">
                            <button type="button" class="btn btn-outline-secondary btn-sm rounded-circle">G</button>
                            <button type="button" class="btn btn-outline-secondary btn-sm rounded-circle">f</button>
                            <button type="button" class="btn btn-outline-secondary btn-sm rounded-circle">in</button>
                        </div>
                    </div>
                </div>

                <!-- FOOTER -->
                <div class="modal-footer border-0 justify-content-center">
                    <small class="text-muted">
                        Don’t have an account?
                        <a href="#"
                           class="fw-semibold text-decoration-none"
                           data-bs-dismiss="modal"
                           data-bs-toggle="modal"
                           data-bs-target="#registerModal">
                            Create one
                        </a>
                    </small>
                </div>
            </div>
        </div>
    </div>



    <!-- REGISTER MODAL -->
    <div class="modal fade" id="registerModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-md">
            <div class="modal-content border-0 shadow-lg rounded-4">

                <!-- HEADER -->
                <div class="modal-header border-0 pb-0">
                    <h4 class="modal-title fw-bold">Create your account 🚀</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- BODY -->
                <div class="modal-body pt-2 px-4 pb-4">
                    <p class="text-muted small mb-4">
                        Get started with <strong>HelpdeskSystem</strong>
                    </p>

                    <form method="post" asp-page="/Account/Register">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label small fw-semibold">Full Name</label>
                            <input name="FullName" class="form-control form-control-lg" placeholder="John Doe" required />      
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-semibold">Email address</label>
                            <input name="Email" class="form-control form-control-lg" placeholder="you@example.com" required />      
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-semibold">Password</label>
                            <input name="Password" type="password" class="form-control form-control-lg" placeholder="••••••••" required />       
                        </div>

                        <div class="mb-4">
                            <label class="form-label small fw-semibold">Confirm Password</label>
                            <input name="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="••••••••" required />      
                        </div>

                        <button class="btn btn-success btn-lg w-100 mb-3">Create Account</button>
                    </form>

                    <!-- SOCIAL REGISTER (UI ONLY – FUTURE MFA READY) -->
                    <div class="text-center">
                        <small class="text-muted">or sign up with</small>
                        <div class="d-flex justify-content-center gap-3 mt-2">
                            <button type="button" class="btn btn-outline-secondary btn-sm rounded-circle">G</button>
                            <button type="button" class="btn btn-outline-secondary btn-sm rounded-circle">f</button>
                            <button type="button" class="btn btn-outline-secondary btn-sm rounded-circle">in</button>
                        </div>
                    </div>
                </div>

                <!-- FOOTER -->
                <div class="modal-footer border-0 justify-content-center">
                    <small class="text-muted">
                        Already have an account?
                        <a href="#"
                           class="fw-semibold text-decoration-none"
                           data-bs-dismiss="modal"
                           data-bs-toggle="modal"
                           data-bs-target="#loginModal">
                            Login
                        </a>
                    </small>
                </div>
            </div>
        </div>
    </div>


</body>
</html>